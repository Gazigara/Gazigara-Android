<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Add">

    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="7.5:1" android:id="@+id/constraintLayout2">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@mipmap/white_nochar_logo"
                android:id="@+id/imageView6"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintDimensionRatio="1:1" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="물품 등록"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_add"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginTop="8dp"
            android:background="@drawable/stroke_black"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintDimensionRatio="2:1" android:id="@+id/constraintLayout3">

        <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/ic_add_circle_outline_black_35dp"
                android:id="@+id/add_btn_picadd" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="130dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="130dp" android:layout_marginTop="50dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintDimensionRatio="1:1"
                android:backgroundTint="@color/colorPrimary"/>
    </android.support.constraint.ConstraintLayout>
    <TextView
            android:text="물품 이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:id="@+id/text_thing" app:layout_constraintStart_toStartOf="@+id/add_edit_thing"
            app:layout_constraintBottom_toTopOf="@+id/add_edit_thing" android:layout_marginBottom="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/add_edit_thing" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.431" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/add_baseline" android:layout_height="0dp"
            app:layout_constraintDimensionRatio="7.5:1"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="2dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
            android:layout_marginTop="16dp" android:id="@+id/linearLayout">
    </LinearLayout>
    <TextView
            android:text="설명"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/add_edit_date"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/add_edit_date"/>
    <EditText
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/add_edit_date"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/add_btn_add" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/add_baseline" android:layout_width="0dp"
            app:layout_constraintDimensionRatio="7.5:1"/>
    <Button
            android:text="Add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/circle_btn_pri"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/add_btn_add" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="70dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="h,7:1"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="2dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/add_baseline">
    </LinearLayout>
</android.support.constraint.ConstraintLayout>