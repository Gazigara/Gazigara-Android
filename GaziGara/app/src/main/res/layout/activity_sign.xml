<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Sign">

    <LinearLayout
            android:orientation="vertical"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:layout_width="0dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:id="@+id/sign_baseline" app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:layout_marginTop="24dp">
    </LinearLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_baseline"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:id="@+id/first_panel"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintDimensionRatio="0.9:1" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/sign_btn_sign"
            android:layout_marginTop="16dp">

        <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sign_text_name"
                android:textColor="#000000"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@+id/sign_edit_name" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/sign_edit_name"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/sign_edit_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="7.5:1"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/sign_edit_id"/>
        <TextView
                android:text="User ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sign_text_id"
                android:textColor="#000000"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@+id/sign_edit_id" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/sign_edit_id"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/sign_edit_id"
                app:layout_constraintDimensionRatio="7.5:1"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toBottomOf="@+id/sign_edit_name"
                app:layout_constraintBottom_toTopOf="@+id/sign_edit_pw"/>
        <TextView
                android:text="Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sign_text_pw"
                android:textColor="#000000"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@+id/sign_edit_pw" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/sign_edit_pw"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/sign_edit_pw"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:layout_constraintDimensionRatio="7.5:1" app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_edit_id"/>
        <Button
                android:layout_width="wrap_content"
                android:background="@drawable/next_btn"
                android:layout_height="wrap_content"
                android:id="@+id/sign_btn_next" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/sign_edit_pw" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/sign_baseline"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="0.9:1"
            android:id="@+id/second_panel" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/sign_btn_sign" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp" android:visibility="invisible">

        <TextView
                android:text="Student Number ( 4ìž )"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="17sp"
                android:id="@+id/sign_text_num"
                app:layout_constraintDimensionRatio=""
                app:layout_constraintStart_toStartOf="@+id/sign_edit_num" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/sign_edit_num"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="numberPassword"
                android:ems="10"
                android:id="@+id/sign_edit_num"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:layout_constraintDimensionRatio="7.5:1" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout4"/>
        <TextView
                android:text="Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#000000"
                android:id="@+id/sign_text_phone"
                app:layout_constraintStart_toStartOf="@+id/sign_edit_phone" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/sign_edit_phone"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/sign_edit_phone"
                android:backgroundTint="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                app:layout_constraintDimensionRatio="7.5:1" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4"/>
        <Button
                android:layout_width="wrap_content"
                android:background="@drawable/back_btn"
                android:layout_height="wrap_content"
                android:id="@+id/sign_btn_back" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/sign_edit_phone" android:layout_marginBottom="11dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/linearLayout4">
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <Button
            android:text="Sign"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/circle_btn_pri"
            android:textColor="#000000"
            android:id="@+id/sign_btn_sign" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            app:layout_constraintHorizontal_bias="0.504" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintDimensionRatio="5.5:1"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/pink_nochar_logo"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>