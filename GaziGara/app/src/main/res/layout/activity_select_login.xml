<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".SelectLogin" tools:layout_editor_absoluteY="25dp">

    <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/circle_btn_pri"
            android:textColor="@color/colorPrimary"
            android:id="@+id/select_btn_login" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintDimensionRatio="5:1" app:layout_constraintBottom_toTopOf="@+id/under_baseline"
            android:layout_marginBottom="24dp"/>
    <Button
            android:text="Sign in"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/circle_btn_pri"
            android:textColor="@color/colorPrimary"
            android:id="@+id/select_btn_register" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="80dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            app:layout_constraintDimensionRatio="5:1"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/under_baseline"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_height="2dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_width="0dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/select_baseline" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="2dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/select_baseline" android:id="@+id/under_baseline">
    </LinearLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/white_char_logo"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/select_baseline"/>
</android.support.constraint.ConstraintLayout>